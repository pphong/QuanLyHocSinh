<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectAddEdit">


    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="584dp"
        android:background="#A4C7D7F4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456">

        <TextView
            android:id="@+id/tvSubjectEditTitle"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Add new"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubjectEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/txSubjectName"
            android:layout_width="371dp"
            android:layout_height="57dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/btnSubjectAddClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_negative_selector"
            android:text="Clear" />

        <Button
            android:id="@+id/btnSubjectAddSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>